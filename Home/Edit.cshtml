@model MVCCURD.Employee
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4 class="text-center bg-primary text-white rounded-2 p-2" style="font-size:25px;">Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.empid)
        <div class="form-group ">
            @Html.LabelFor(model => model.empname, htmlAttributes: new { @class = "control-label col-md-12 text-capitalize fs-3  text-center fw-bold" })
            <div class="col-md-12 d-flex justify-content-center ">
                @Html.EditorFor(model => model.empname, new { htmlAttributes = new { @class = "form-control bg-secondary text-white text text-capitalize border-0" } })
                @Html.ValidationMessageFor(model => model.empname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.salaray, htmlAttributes: new { @class = "control-label col-md-12 text-capitalize fs-3  text-center fw-bold" })
            <div class="col-md-12 d-flex justify-content-center">
                @Html.EditorFor(model => model.salaray, new { htmlAttributes = new {  @class = "form-control bg-secondary text-white text text-capitalize border-0" } })
                @Html.ValidationMessageFor(model => model.salaray, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group  d-flex justify-content-center pt-4 ">
            <div class="row">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
